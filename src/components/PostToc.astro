---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
const items = headings.filter((heading) => heading.depth >= 2 && heading.depth <= 3);
---

{items.length > 0 && (
  <aside class="toc surface-card">
    <h2>Contents</h2>
    <ul>
      {items.map((heading) => (
        <li class={`depth-${heading.depth}`}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))}
    </ul>
  </aside>
)}

<style>
  .toc {
    position: sticky;
    top: 0.8rem;
    padding: 0.95rem;
    max-height: calc(100vh - 1.6rem);
    overflow: auto;
  }

  h2 {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text-muted);
  }

  ul {
    margin: 0.65rem 0 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.3rem;
  }

  li {
    font-size: 0.85rem;
    line-height: 1.35;
  }

  .depth-3 {
    padding-left: 0.6rem;
  }

  a {
    color: var(--text-muted);
  }

  a:hover {
    color: var(--brand);
  }
</style>
